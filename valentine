      align-items: center;
      height: 100vh;
      margin: 0;
      overflow: hidden;
    }

    .window {
      width: 400px;
      height: 300px;
      background-color: white;
      border: 2px solid #333;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
      position: absolute;
      overflow: visible;
    }

    .header {
      background-color: #ff66b2;
      color: white;
      padding: 15px;
      font-size: 20px;
      font-weight: bold;
      text-align: center;
    }

    .content {
      text-align: center;
      padding: 20px;
      position: relative;
    }

    .button {
      font-size: 20px;
      padding: 15px 30px;
      background-color: #ff66b2;
      color: white;
      border: none;
      cursor: pointer;
      margin: 10px;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .button:hover {
      background-color: #ff3399;
    }

    #yesButton {
      position: relative;
      margin: 10px;
    }

    .hidden {
      display: none;
    }

    .message-popup {
      position: absolute;
      font-size: 24px;
      color: rgb(255, 0, 221);
      animation: fadeOutUp 1s forwards;
      white-space: nowrap;
      pointer-events: none;
      z-index: 1000;
    }

    @keyframes fadeOutUp {
      0% {
        opacity: 1;
        transform: translate(0, 0);
      }
      100% {
        opacity: 0;
        transform: translate(0, -50px);
      }
    }

    @keyframes heartSpam {
      0% {
        transform: scale(1) translateY(0);
        opacity: 1;
      }
      100% {
        transform: scale(2) translateY(-100px);
        opacity: 0;
      }
    }
